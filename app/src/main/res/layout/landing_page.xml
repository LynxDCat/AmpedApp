<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#16171B"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Title TextView -->
    <TextView
        android:id="@+id/Profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_regular"
        android:text="Create Tracks"
        android:textColor="@color/white"
        android:textSize="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="48dp"
        android:layout_marginStart="16dp" />

    <!-- ScrollView with Proper Constraints -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/Profile"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:paddingLeft="32dp"
            android:paddingRight="32dp">

            <include
                android:id="@+id/button_delay"
                layout="@layout/custom_button_delay"/>

            <!-- Dropdown Layout for Delay -->
            <LinearLayout
                android:id="@+id/dropdown_delay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                android:layout_marginTop="8dp"
                android:padding="16dp"
                android:background="#242424"
                android:elevation="4dp">

                <!-- Delay Options - ADD THIS NEW SECTION -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Delay Options"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp"/>

                <RadioGroup
                    android:id="@+id/delay_options_group"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp">

                    <RadioButton
                        android:id="@+id/delay_short"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Short Delay (150ms)"
                        android:textColor="#FFFFFF"
                        android:buttonTint="#FF5252"/>

                    <RadioButton
                        android:id="@+id/delay_medium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Medium Delay (300ms)"
                        android:textColor="#FFFFFF"
                        android:buttonTint="#FF5252"
                        android:checked="true" />

                    <RadioButton
                        android:id="@+id/delay_long"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Long Delay (500ms)"
                        android:textColor="#FFFFFF"
                        android:buttonTint="#FF5252"/>
                </RadioGroup>

                <!-- Audio Player (SeekBar + Play Button) -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageButton
                        android:id="@+id/play_button"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@raw/play_icon"
                        android:background="@null"
                        android:tint="#FFFFFF"/>

                    <SeekBar
                        android:id="@+id/seekbar"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:max="100"
                        android:progress="0"/>

                </LinearLayout>

                <!-- Add Button -->
                <Button
                    android:id="@+id/add_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add"
                    android:layout_gravity="end"
                    android:backgroundTint="#FF5252"
                    android:textColor="#FFFFFF"
                    android:layout_marginTop="8dp"/>

            </LinearLayout>

            <include
                android:id="@+id/button_reverb"
                layout="@layout/custom_button_reverb"/>


            <include
                android:id="@+id/button_cleantone"
                layout="@layout/custom_button_cleantone"/>

            <include
                android:id="@+id/button_distortion"
                layout="@layout/custom_button_distortion"/>

            <include
                android:id="@+id/button_overdrive"
                layout="@layout/custom_button_overdrive"/>

        </LinearLayout>

    </ScrollView>

    <include
        android:id="@+id/bottomNav"
        layout="@layout/bottom_navbar"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>