<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#16171B"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- Title TextView -->
    <TextView
        android:id="@+id/Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_regular"
        android:text="How to add Effects"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="48dp"
        android:layout_marginStart="16dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Title"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:ignore="SpeakableTextPresentCheck">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="216dp"
                android:layout_height="480dp"
                android:src="@raw/htae1"
                android:layout_gravity="center"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Step 1: Select an effect from the drop-down menu to view available options."
                android:fontFamily="@font/poppins_regular"
                android:textColor="@color/white"
                android:textSize="16dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:layout_marginEnd="24dp"/>

            <ImageView
                android:layout_width="216dp"
                android:layout_height="480dp"
                android:src="@raw/htae2"
                android:layout_gravity="center"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Step 2: Click the Play button to preview the selected effect."
                android:fontFamily="@font/poppins_regular"
                android:textColor="@color/white"
                android:textSize="16dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="24dp"/>

            <ImageView
                android:layout_width="216dp"
                android:layout_height="480dp"
                android:src="@raw/htae3"
                android:layout_gravity="center"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Step 3: Click the Pause button to stop the preview at any time."
                android:fontFamily="@font/poppins_regular"
                android:textColor="@color/white"
                android:textSize="16dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="24dp"/>

            <ImageView
                android:layout_width="216dp"
                android:layout_height="480dp"
                android:src="@raw/htae4"
                android:layout_gravity="center"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Step 4: Enter the desired value in the input field, then click Add to queue the effect."
                android:fontFamily="@font/poppins_regular"
                android:textColor="@color/white"
                android:textSize="16dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="24dp"/>

            <ImageView
                android:layout_width="216dp"
                android:layout_height="480dp"
                android:src="@raw/htae5"
                android:layout_gravity="center"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Step 5: Navigate to the Queue tab to view the list of effects you've added."
                android:fontFamily="@font/poppins_regular"
                android:textColor="@color/white"
                android:textSize="16dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="24dp"
                android:layout_marginEnd="24dp"/>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>