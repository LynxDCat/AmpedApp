<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#16171B"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- Title TextView -->
    <TextView
        android:id="@+id/Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_regular"
        android:text="How to Save and Delete Preset"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="48dp"
        android:layout_marginStart="16dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Title"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:ignore="SpeakableTextPresentCheck">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="216dp"
                android:layout_height="480dp"
                android:src="@raw/sdd_1"
                android:layout_gravity="center"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Step 1: After selecting an effect, tap &quot;Save Preset&quot; to begin saving your configuration."
                android:fontFamily="@font/poppins_regular"
                android:textColor="@color/white"
                android:textSize="16dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:layout_marginEnd="24dp"/>

            <ImageView
                android:layout_width="216dp"
                android:layout_height="480dp"
                android:src="@raw/sdd_2"
                android:layout_gravity="center"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Step 2: Enter a name for your preset, then tap &quot;Save&quot; to confirm."
                android:fontFamily="@font/poppins_regular"
                android:textColor="@color/white"
                android:textSize="16dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="24dp"/>

            <ImageView
                android:layout_width="216dp"
                android:layout_height="480dp"
                android:src="@raw/sdd_3"
                android:layout_gravity="center"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Step 3: Navigate to the &quot;My Presets&quot; tab to view and use your saved presets."
                android:fontFamily="@font/poppins_regular"
                android:textColor="@color/white"
                android:textSize="16dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="24dp"/>

            <ImageView
                android:layout_width="216dp"
                android:layout_height="480dp"
                android:src="@raw/sdd_4"
                android:layout_gravity="center"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Step 4: To delete a preset, tap the &quot;Ã—&quot; (delete) icon next to the &quot;Use&quot; button."
                android:fontFamily="@font/poppins_regular"
                android:textColor="@color/white"
                android:textSize="16dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="24dp"/>

            <ImageView
                android:layout_width="216dp"
                android:layout_height="480dp"
                android:src="@raw/sdd_5"
                android:layout_gravity="center"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Step 5: Confirm deletion by re-entering the preset name, then press &quot;Delete&quot;."
                android:fontFamily="@font/poppins_regular"
                android:textColor="@color/white"
                android:textSize="16dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="24dp"
                android:layout_marginEnd="24dp"/>

            <ImageView
                android:layout_width="216dp"
                android:layout_height="480dp"
                android:src="@raw/sdd_6"
                android:layout_gravity="center"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Step 6: A confirmation message will appear once the preset has been successfully removed."
                android:fontFamily="@font/poppins_regular"
                android:textColor="@color/white"
                android:textSize="16dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="24dp"
                android:layout_marginEnd="24dp"/>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>